@model ShopMVC.Models.Product
@{
    ViewBag.Title = "Edit Product";
}
<form asp-action='EditProduct' asp-controller='Home' asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name product</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category1" class="control-label">Category1</label>
        <input type="text" asp-for="Category1" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Category2" class="control-label">Category2</label>
        <input type="text" asp-for="Category2" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Type</label>
        <input type="text" asp-for="Type" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount products</label>
        <input type="number" asp-for="Amount" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>

</form>