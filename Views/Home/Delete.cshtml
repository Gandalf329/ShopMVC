@model ShopMVC.Models.Product
@{
    ViewBag.Title = "Delete product";
}

<div>
    <dl class="dl-horizontal">
        <dt>Id: </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>Name: </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Amount: </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>Price: </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>Type: </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input style="display: block; width: 100%; height: calc(2.25rem + 2px); padding: 0.375rem 0.75rem; font-family: inherit; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #212529; background-color: orangered; background-clip: padding-box; border: 1px solid #bdbdbd; border-radius: 0.25rem; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;" type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>