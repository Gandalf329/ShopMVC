@model ShopMVC.Models.Product
@{
    ViewData["Title"] = "All Messages";
}
@if (User.IsInRole("admin"))
    {
<a asp-action="CreateProduct">New product</a>
    }
<h1>All Products</h1>
<p>@Model.Category1  / @Model.Category2</p>
<div class="text-center">
    <table class="table">
        <tr><td>Name</td><td>Company</td><td>Category</td><td>Description</td><td>Amount</td></tr>

        <tr>
            <td>@Model.Name</td>
            <td>@Model.Company</td>
            <td><a asp-controller="Home" asp-action="Categories" asp-route-nameCategory="@Model.Category2">@Model.Category2 </a></td>
            <td>@Model.Description</td>
            <td>@Model.Amount</td>
            @if (User.IsInRole("admin"))
            {
            <td>
                <form method="post" asp-controller="Home" asp-action="BuyTest" asp-route-id="@Model.Id">
                    <input type="submit" value="Buy Test" />
                </form>
            </td>
            <td>
                <a class="profile-link text-dark" asp-controller="Home" asp-action="EditProduct" asp-route-id="@Model.Id">Edit</a>
            </td>
            <td>
                <a class="profile-link text-dark" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </td>
            }
            <td>
                <a class="profile-link text-dark" asp-controller="Home" asp-action="BuyProduct" style=" display: block; width: 200%; height: calc(2.25rem + 5px); padding: 0.375rem 0.75rem; font-family: inherit; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #212529; background-color:lightgreen; background-clip: padding-box; border: 1px solid #bdbdbd; border-radius: 0.25rem; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;">Buy</a>
            </td>
        </tr>

    </table>
</div>